@model MotorMax.Web.ViewModels.Repuesto.RepuestoDetailVm

@{
    ViewBag.Title = "ProveedoresDelRepuesto";
}

<h2>Detalles del Repuesto</h2>

<div>
    <hr />
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                @Html.DisplayNameFor(model => model.Repuesto.Descripcion)
                @Html.TextBoxFor(model => model.Repuesto.Descripcion, new { @class = "form-control", @disabled = "disabled" })

            </div>

        </div>
    </div>
</div>

<p class="mt-3">
    @Html.ActionLink("Agregar Proveedor", "AddProveedor", new { repuestoId = Model.Repuesto.RepuestoId }, new { @class = "btn btn-primary" })

    @Html.ActionLink("Volver", "Index", null, new { @class = "btn btn-success" })
</p>
<hr />

<table class="table table-bordered table-hover w-75">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Proveedores.FirstOrDefault().NombreProveedor)
        </th>
        <th class="w-25">Acciones</th>
    </tr>
    @if (Model.Proveedores.Any())
    {
        foreach (var item in Model.Proveedores)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.NombreProveedor)
                </td>
                <td>
                    @Html.ActionLink("Quitar", "QuitarProveedor", new { id = item.ProveedorId }, new { @class = "btn btn-sm btn-danger" })
                </td>
            </tr>
        }

    }
    else
    {
        <tr>
            <td colspan="2" style="text-align:center" class="text-danger"><strong>No se han agregado proveedores todavía</strong></td>

        </tr>
    }

</table>
