@model MotorMax.Web.ViewModels.Ciudad.CiudadEditVm
<div class="form-group">
    @Html.LabelFor(model => model.Nombre, htmlAttributes: new { @class = "control-label col-md-2" })
    <div class="col-md-5">
        @Html.EditorFor(model => model.Nombre, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })
    </div>
</div>

<div class="form-group">
    @Html.LabelFor(model => model.ProvinciaId, htmlAttributes: new { @class = "control-label col-md-2" })
    <div class="col-md-5">
        @Html.DropDownListFor(model => model.ProvinciaId, Model.Provincias, "Seleccione Provincia", new { @class = "form-select" })
        @Html.ValidationMessageFor(model => model.ProvinciaId, "", new { @class = "text-danger" })
    </div>
</div>


